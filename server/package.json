{
  "name": "polyindex-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:packages": "cd packages/relations-engine && npm i && npm run build",
    "build:all": "npm run build:packages && npm run build",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@arizeai/openinference-instrumentation-openai": "^2.3.1",
    "@arizeai/openinference-semantic-conventions": "^2.1.7",
    "@arizeai/phoenix-client": "^5.6.1",
    "@hono/node-server": "^1.14.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.210.0",
    "@opentelemetry/sdk-node": "^0.210.0",
    "@opentelemetry/sdk-trace-node": "^2.4.0",
    "@polyindex/relations-engine": "file:packages/relations-engine",
    "dotenv": "^16.4.7",
    "hono": "^4.11.4",
    "openai": "^4.78.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3"
  }
}
